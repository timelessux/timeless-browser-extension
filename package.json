{
  "name": "timeless-web-extension",
  "private": true,
  "version": "0.1.28",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "staging": "vite --mode staging",
    "prod": "vite --mode production",
    "build-prod": "tsc && cross-env NODE_OPTIONS=--max-old-space-size=8192 vite build && yarn rename-prod && yarn copy-fav",
    "build-staging": "tsc && cross-env NODE_OPTIONS=--max-old-space-size=8192 vite build --mode staging && yarn rename-staging && yarn copy-fav-staging",
    "deploy:staging": "yarn update-version && yarn commit-version && yarn build-staging && yarn zip-staging",
    "commit-version": "node ./deploy/commit_message.js",
    "update-version": "node ./deploy/update_version.js",
    "rename-staging": "rm -rf extension-build-staging-V$npm_package_version && mv extension-build extension-build-staging-V$npm_package_version",
    "rename-prod": "rm -rf timeless-x && mv extension-build timeless-x",
    "zip-staging": "zip -r extension-build-staging-V$npm_package_version.zip extension-build-staging-V$npm_package_version",
    "zip-prod": "zip -r timeless_x_005.zip timeless-x",
    "copy-fav-staging": "cp public/assets/favicon.ico extension-build-staging-V$npm_package_version/public/assets/",
    "copy-fav": "cp public/assets/favicon.ico timeless-x/public/assets/",
    "preview": "vite preview",
    "test:lint": "eslint 'src/**'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@metamask/browser-passworder": "^4.2.0",
    "@metamask/inpage-provider": "^8.0.3",
    "@rainbow-me/rainbowkit": "^2.1.2",
    "@reduxjs/toolkit": "^1.9.6",
    "@tanstack/react-query": "^5.45.0",
    "@types/react-slick": "^0.23.13",
    "antd": "^5.8.2",
    "axios": "^1.3.4",
    "bootstrap": "^5.3.1",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.43",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-in-viewport": "^1.0.0-alpha.30",
    "react-infinite-scroll-component": "^6.1.0",
    "react-lazy-load-image-component": "^1.6.0",
    "react-markdown": "^8.0.7",
    "react-player": "^2.13.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.8.2",
    "react-scrubber": "^2.0.0",
    "react-share": "^4.4.1",
    "react-show-more-text": "^1.7.1",
    "react-slick": "^0.30.2",
    "react-typed": "^1.2.0",
    "redux": "^4.2.1",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.2.3",
    "remark-gfm": "^3.0.1",
    "reverse-mirage": "^1.1.0",
    "sass": "^1.58.3",
    "viem": "^2.13.10",
    "wagmi": "^2.10.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.11",
    "@types/chrome": "^0.0.197",
    "@types/node": "^18.8.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.0.6",
    "@types/react-lazy-load-image-component": "^1.6.4",
    "@types/react-show-more-text": "^1.4.2",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-node-polyfills": "^0.15.0",
    "vite-plugin-svgr": "^2.2.1",
    "vite-plugin-terminal": "^1.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext .ts",
      "prettier --check"
    ],
    "*.tsx": [
      "eslint --ext .tsx",
      "prettier --check"
    ]
  }
}
